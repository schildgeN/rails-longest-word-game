<h1> New Game </h1>

<ul class="d-flex justify-content-between mt-4">
  <% @letters.each do |letter| %>
    <li class="btn-primary px-3 py-2 rounded"><%= letter.capitalize %></li>
  <% end %>
</ul>

<form action="/score" method="post" class="form-group">
  <label for="ask">What is the longest word you can find?</label>
    <div class="inputs d-flex">
      <input type="text" name="word" class="form-control" value="<%= params[:word] %>">
      <input type="submit" value="Play">
      <input id="token" name="letters" type="hidden" value="<%= @letters %>">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    </div>
</form>
